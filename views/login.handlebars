<style>
  body {
    background: url('/assets/images/study.jpg') no-repeat;
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
  }
</style>
<div class="overlay">
  <div class="container">
    <div class="login mx-auto col-sm-10 col-md-8 col-lg-6 col-xl-5">
      <h3 class="text-center my-4 title title-login pt-3">Login</h3>
      {{#if success}}
      <div class="success">{{ success }}</div>
      {{else if error}}
      <div class="alert">{{ error }}</div>
      {{/if}}
      <form action="/login" method="post">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Email Address" , name="email">
        </div>
        <div class="form-group">
          <input class="form-control" type="password" placeholder="Password" , name="password">
        </div>
        <button class="btn bg-blue text-white w-100 mt-4" type="submit">LOG IN</button>
      </form>
    </div>
  </div>
</div>